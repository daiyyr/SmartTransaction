}

@section Scripts {
    <!-- jQuery UI -->
    <script src="~/libs/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>


    <script type="text/javascript">


    </script>

}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        New Transactions
        <small></small>
    </h1>
    <ol class="breadcrumb">
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- /.row -->
    <!-- Main row -->
    @foreach (var folder in ViewBag.folders)
    {
        <div class="box">
            <div class="container-fluid">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">@folder.Name</h3>

                            <div class="card-tools" style="display:none">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>By</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var doc in folder.documents)
                                    {
                                        <tr>
                                            <td><a href='@Url.Action("Download", "Documents", new { foldername = folder.Name, documentname = @doc.Name })'>@doc.Name</a></td>
                                            <td>@doc.Date</td>
                                            <td>
                                                @if (doc.New)
                                                {
                                                    <span class="label label-danger">New</span>
                                                }
                                            </td>
                                            <td>@doc.By</td>
                                            <td>
                                                <form>
                                                    <input id="@doc.Name" style="display:none" />
                                                    <div class="card-footer">
                                                        <button type="submit" class="btn btn-primary">Processed</button>
                                                    </div>
                                                </form>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>


        </div>

    }

    <!-- /.row (main row) -->

</section>
<!-- /.content -->